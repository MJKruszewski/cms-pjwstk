{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@middleware/*": ["middleware/*"],
      "@repository/*": ["repository/*"],
      "@service/*": ["service/*"],
      "@domain/*": ["domain/*"],
      "@fixture/*": ["fixtures/*"],
      "@src/*": ["src/*"],
      "@store/*": ["store/*"]
    },
    "typeRoots": [
      "node_modules/onpaypal__checkout-server-sdk",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
